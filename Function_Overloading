#include<iostream>

using namespace std;

int sum(int a, int b){
    return a+b;
}

float sum(float a, float b){
    return a+b;
}

double sum(double a, double b){
    return a+b;
}

int main(){
    int num1 = 5, num2 = 10;
    float num3 = 3.5, num4 = 7.2;
    double num5 = 1.5, num6 = 2.7;
    
    cout << "Sum of integers: " << sum(num1, num2) << endl;
    cout << "Sum of floats: " << sum(num3, num4) << endl;
    cout << "Sum of doubles: " << sum(num5, num6) << endl;
    
    return 0;
}
